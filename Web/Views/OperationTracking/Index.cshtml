<script>
    function Goster(id) {
        var secilenID = document.getElementById(id);
        if (secilenID.style.display == "none") {
            secilenID.style.display = "";
            $('#example1').hide();
            $('#controls').hide();
        } else {
            secilenID.style.display = "none";
        }
    }

    function Gizle() {
        $("#altListe").hide();
    }
</script>

<script>
    //dropdownları doldurma
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/Request/GetCompany",
            dataType: "json",
            success: function (response) {
                $("#Companies").empty().append('<option value="0"> Şirket Seçiniz </option>');
                for (let company of response) {
                    $("#Companies").append('<option value="' + company.Id + '"> ' + company.Name + ' </option>');
                }
            },
        });

        $('#Companies').change(function () {
            let CompanyId = $('#Companies option:selected').val();
            $.ajax({
                type: "POST",
                url: "../Request/GetService",
                data: { companyId: CompanyId },
                dataType: "json",
                success: function (response) {
                    $("#Service").removeAttr('disabled');
                    $("#Service").empty().append('<option value="0"> Servis Seçiniz </option>');

                    for (let service of response) {
                        $("#Service").append('<option value="' + service.Id + '"> ' + service.BranchName + ' </option>');
                    }
                },
            });
        });
    });
</script>