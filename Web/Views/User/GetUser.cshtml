@model Web.Entities.Kullanici
@{
    ViewData["Title"] = "GetUser";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<hr />
<h3 class="d-flex justify-content-center">Birim Güncelleme Ekranı</h3>
@using (Html.BeginForm("UpdateUser", "User", FormMethod.Post))
{
    <div class="col-sm-12">
        <div class="form-group">
            @*<div class="form-group">
                @Html.HiddenFor(m => m.UserId, new { @class = "form-control" })
            </div>*@
            <div class="form-group">
                <label for="message-text" class="col-form-label">Kullanıcı Adı Soyadı :</label>
                @Html.TextBoxFor(m => m.AdiSoyadi, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Kullanıcı Kodu :</label>
                @Html.TextBoxFor(m => m.Kodu, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Kullanıcı Şifresi :</label>
                @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Kullanıcı Yetkisi :</label>
                @Html.TextBoxFor(m => m.Yetki, new { @class = "form-control" })
            </div>
        </div>
        <div class="modal-footer">
            <a href="/User/Index" class="btn btn-secondary">Kapat</a>
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </div>
    </div>
}





