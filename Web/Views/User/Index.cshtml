@model IEnumerable<Common.Models.Response.ResponseKullanicilarListesiDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<hr />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 mx-auto ">
                <partial name="_AddExportPartialView" />
                <div class="card-body ">
                    <div id="example1_wrapper " class="dataTables_wrapper dt-bootstrap4 ">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Adı Soyadı</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Kullanıcı Kodu</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Şifre</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Yetki</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="dtr-control sorting_1" tabindex="0">@item.AdiSoyadi</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@item.Kodu</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@item.Sifre</td>
                                                @if (item.Yetki == 0)
                                                {
                                                    <td class="dtr-control sorting_1" tabindex="0">@Enum.GetNames(typeof(Web.Entities.Kullanici.Aut)).FirstOrDefault()</td>
                                                }
                                                else if (item.Yetki == 1)
                                                {
                                                    <td class="dtr-control sorting_1" tabindex="0">@Enum.GetName(typeof(Web.Entities.Kullanici.Aut), 1)</td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/TalepWeb/plugins/jquery/jquery.min.js"></script>

