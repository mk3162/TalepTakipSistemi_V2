@model Web.Entities.Tedarikci
@{
    ViewData["Title"] = "GetSupplier";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<hr />
<h3 class="d-flex justify-content-center">Tedarikçi Bilgisi Güncelleme Ekranı</h3>
@using (Html.BeginForm("UpdateSupplier", "Supplier", FormMethod.Post))
{
    <div class="col-sm-12">
        <div class="form-group">
            @*<div class="form-group">
                @Html.HiddenFor(m => m.TedarikciId, new { @class = "form-control" })
            </div>*@
            <div class="form-group">
                <label for="message-text" class="col-form-label">Tedarikçi Kodu :</label>
                @Html.TextBoxFor(m => m.TedarikciKodu, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Tedarikçi Unvanı :</label>
                @Html.TextBoxFor(m => m.TedarikciUnvani, new { @class = "form-control" })
            </div>
        </div>
        <div class="modal-footer">
            <a href="/Supplier/Index" class="btn btn-secondary">Kapat</a>
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </div>
    </div>
}


