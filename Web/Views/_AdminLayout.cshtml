                        exclude: ".noExl",
                        name: "Excel Document Name",
                        filename: "Yenİ" + new Date().toISOString().replace(/[\-\:\.]/g, "") + ".xls",
                        fileext: ".xls",
                        exclude_img: true,
                        exclude_links: true,
                        exclude_inputs: true,
