@model Web.Entities.Urun
@{
    ViewData["Title"] = "GetProduct";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<hr />
<h3 class="d-flex justify-content-center">Ürün Bilgisi Güncelleme Ekranı</h3>
@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{
    <div class="col-sm-12">
        <div class="form-group">
            <div class="form-group">
                @Html.HiddenFor(m => m.UrunId, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Ürün Kodu :</label>
                @Html.TextBoxFor(m => m.UrunKodu, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="message-text" class="col-form-label">Ürün Tanımı :</label>
                @Html.TextBoxFor(m => m.UrunTanimi, new { @class = "form-control" })
            </div>
        </div>
        <div class="modal-footer">
            <a href="/Supplier/Index" class="btn btn-secondary">Kapat</a>
            <button class="btn btn-primary" type="submit">Kaydet</button>
        </div>
    </div>
}


