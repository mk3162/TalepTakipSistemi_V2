<link href="~/css/Login1.css" rel="stylesheet" />



<div class="sidenav">
    <div class="login-main-text">
        <h2>Talep Takip Sistemi<br>Giriş Sayfası</h2><br><br>
        <p>Buradan giriş yapabilir veya kaydolabilirsiniz</p>
    </div>
</div>
<div class="main">
    <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form method="post">
                <div class="form-group">
                    <label>Adı Soyadı</label>
                    <input type="text" class="form-control" placeholder="Adı Soyadı">
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="password" class="form-control" placeholder="Şifre">
                </div>
                <button type="submit" class="btn btn-black">Giriş Yap</button>
                <button type="submit" class="btn btn-secondary">Kaydol</button>
                <div class="container-login100-form-btn">
                    @if (ViewBag.hata != null)
                    {
                        <p class="text-danger">@ViewBag.hata</p>
                    }
                </div>
            </form>
        </div>
    </div>
</div>
